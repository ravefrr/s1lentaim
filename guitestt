-- Create a ScreenGui
local gui = Instance.new("ScreenGui")
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a Frame for the background
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.5, 0, 0.5, 0) -- Half the size of the screen
frame.Position = UDim2.new(0.25, 0, 0.25, 0) -- Center the frame
frame.BorderSizePixel = 0 -- No borders
frame.BackgroundTransparency = 1 -- Fully transparent initially
frame.Parent = gui

-- Create two Frame objects for the gradient effect
local frame1 = Instance.new("Frame")
frame1.Size = UDim2.new(1, 0, 1, 0) -- Full size
frame1.BorderSizePixel = 0 -- No borders
frame1.BackgroundColor3 = Color3.new(0, 0, 0) -- Black background
frame1.BackgroundTransparency = 0 -- Fully opaque initially
frame1.Parent = frame

local frame2 = Instance.new("Frame")
frame2.Size = UDim2.new(1, 0, 1, 0) -- Full size
frame2.BorderSizePixel = 0 -- No borders
frame2.BackgroundColor3 = Color3.new(1, 0, 0) -- Red background
frame2.BackgroundTransparency = 1 -- Fully transparent initially
frame2.Parent = frame

-- Tween the transparency of frame1 to create the gradient effect
frame1:TweenProperty("BackgroundTransparency", 1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, 1, true)
