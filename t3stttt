_G.PRED = 0.025
local Aiming = loadstring(game:HttpGet("https://github.com/ravefrr/s1lentaim/raw/main/FOV55"))()
Aiming.TeamCheck(false)
Aiming.ShowFOV = true
Aiming.FOV = 55

local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()
local CurrentCamera = Workspace.CurrentCamera

local DaHoodSettings = {
    SilentAim = true,
    AimLock = false,
    Prediction = 0.121,
    AimLockKeybind = Enum.KeyCode.E,
    FOV = 55 -- Default FOV
}
getgenv().DaHoodSettings = DaHoodSettings

-- Function to create GUI
local function createGUI()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local Frame = Instance.new("Frame")
    Frame.Name = "AimbotGUI"
    Frame.Size = UDim2.new(0, 200, 0, 120)
    Frame.Position = UDim2.new(0.5, -100, 0.5, -60)
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Frame.BorderSizePixel = 2
    Frame.BorderColor3 = Color3.fromRGB(255, 255, 255)
    Frame.ZIndex = 10
    Frame.Parent = ScreenGui

    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.Size = UDim2.new(1, 0, 0, 30)
    Title.Position = UDim2.new(0, 0, 0, 0)
    Title.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.Font = Enum.Font.SourceSansBold
    Title.TextSize = 18
    Title.Text = "Silent Aim Settings"
    Title.Parent = Frame

    local Toggle = Instance.new("TextButton")
    Toggle.Name = "Toggle"
    Toggle.Size = UDim2.new(0, 100, 0, 30)
    Toggle.Position = UDim2.new(0.5, -50, 0, 40)
    Toggle.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
    Toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
    Toggle.Font = Enum.Font.SourceSans
    Toggle.TextSize = 14
    Toggle.Text = "Enabled"
    Toggle.Parent = Frame

    local FOVSlider = Instance.new("TextLabel")
    FOVSlider.Name = "FOVSlider"
    FOVSlider.Size = UDim2.new(1, -20, 0, 30)
    FOVSlider.Position = UDim2.new(0, 10, 1, -40)
    FOVSlider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    FOVSlider.TextColor3 = Color3.fromRGB(255, 255, 255)
    FOVSlider.Font = Enum.Font.SourceSans
    FOVSlider.TextSize = 14
    FOVSlider.Text = "FOV: 55"
    FOVSlider.Parent = Frame

    local FOVSliderUI = Instance.new("TextButton")
    FOVSliderUI.Name = "FOVSliderUI"
    FOVSliderUI.Size = UDim2.new(1, -20, 0, 10)
    FOVSliderUI.Position = UDim2.new(0, 10, 1, -20)
    FOVSliderUI.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    FOVSliderUI.Parent = FOVSlider

    return Toggle, FOVSliderUI
end

-- Create GUI
local Toggle, FOVSliderUI = createGUI()

-- Toggle Functionality
local isToggled = true -- Starts as enabled

Toggle.MouseButton1Click:Connect(function()
    isToggled = not isToggled
    if isToggled then
        Toggle.Text = "Enabled"
        Aiming.Enabled = true -- Enable silent aim
    else
        Toggle.Text = "Disabled"
        Aiming.Enabled = false -- Disable silent aim
    end
end)

-- FOV Slider Functionality
local FOVMax = 110
local FOVMin = 1
local defaultFOV = 55

FOVSliderUI.MouseButton1Down:Connect(function()
    FOVSliderUI.MouseMoved:Connect(function()
        local mousePos = game.Players.LocalPlayer:GetMouse().X
        local FOVValue = math.floor((mousePos - FOVSliderUI.AbsolutePosition.X) / FOVSliderUI.AbsoluteSize.X * (FOVMax - FOVMin) + FOVMin)
        FOVSlider.Text = "FOV: " .. FOVValue
        DaHoodSettings.FOV = FOVValue
    end)
end)

-- Silent Aim function
local function silentAim()
    local __index = hookmetamethod(game, "__index", function(t, k)
        if (t:IsA("Mouse") and (k == "Hit" or k == "Target") and Aiming.Check()) then
            local SelectedPart = Aiming.SelectedPart
            if (DaHoodSettings.SilentAim and (k == "Hit" or k == "Target")) then
                local Hit = SelectedPart.CFrame + (SelectedPart.Velocity * DaHoodSettings.Prediction)
                return (k == "Hit" and Hit or SelectedPart)
            end
        end
        return __index(t, k)
    end)
end

-- Initialize silent aim
silentAim()

-- Clean up function
game.Players.LocalPlayer.PlayerGui.AimbotGUI:Destroy()
